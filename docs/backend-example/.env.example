# QuickVault AI-OCR 后端环境配置

# 数据库配置
DATABASE_URL=postgresql://quickvault:your_password@localhost:5432/quickvault_ocr

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379

# OpenAI配置
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# 或使用Azure OpenAI
# OPENAI_API_TYPE=azure
# OPENAI_API_BASE=https://your-resource.openai.azure.com/
# OPENAI_API_VERSION=2023-12-01-preview

# 或使用国产模型（通义千问）
# DASHSCOPE_API_KEY=your-dashscope-key

# API认证
API_KEY=your-secret-api-key-change-this-in-production

# 应用配置
APP_ENV=development
LOG_LEVEL=INFO
ALLOWED_ORIGINS=https://app.quickvault.com,https://www.quickvault.com

# 限流配置
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# AI模型配置
DEFAULT_AI_MODEL=gpt-4-turbo-preview
FALLBACK_AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.2
AI_MAX_TOKENS=2000
AI_TIMEOUT_SECONDS=30

# 缓存配置
CACHE_TTL_SECONDS=3600
RESULT_CACHE_TTL_SECONDS=600

# 监控配置
ENABLE_METRICS=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
