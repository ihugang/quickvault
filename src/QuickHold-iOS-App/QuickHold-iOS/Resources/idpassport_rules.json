{
  "schema_version": "1.0",
  "updated_at": "2026-01-08",
  "default_policy": {
    "purpose": "personal_info_storage_and_form_fill",
    "min_collection": true,
    "front_required_by_default": false,
    "back_required_by_default": false,
    "notes": [
      "This ruleset is for UI guidance (what to ask users to upload), not for identity verification.",
      "Avoid over-collection: only request back side when it contains required info (issuer/validity/address changes/MRZ/barcodes needed)."
    ]
  },
  "document_types": {
    "national_id": {
      "labels": {
        "zh": "身份证/国民身份证",
        "en": "National ID"
      },
      "pages": ["front", "back"],
      "upload_fields": {
        "front": {
          "labels": { "zh": "正面（含头像与号码的一面）", "en": "Front (photo & number side)" }
        },
        "back": {
          "labels": { "zh": "背面（如有）", "en": "Back (if applicable)" }
        }
      }
    },
    "passport": {
      "labels": { "zh": "护照", "en": "Passport" },
      "pages": ["data_page"],
      "upload_fields": {
        "data_page": {
          "labels": { "zh": "信息页（照片页）", "en": "Data page (photo page)" }
        }
      }
    },
    "drivers_license": {
      "labels": { "zh": "驾照/驾驶执照", "en": "Driver's License" },
      "pages": ["front", "back"],
      "upload_fields": {
        "front": { "labels": { "zh": "正面", "en": "Front" } },
        "back": { "labels": { "zh": "背面（如有条码/磁条）", "en": "Back (if barcode/magstripe)" } }
      }
    },
    "residence_permit": {
      "labels": { "zh": "居留卡/居留许可", "en": "Residence Permit" },
      "pages": ["front", "back"],
      "upload_fields": {
        "front": { "labels": { "zh": "正面", "en": "Front" } },
        "back": { "labels": { "zh": "背面（如有MRZ/芯片信息）", "en": "Back (if MRZ/chip info)" } }
      }
    }
  },
